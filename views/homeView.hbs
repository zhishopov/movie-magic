<main>
  <section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
      {{#each movies}}
        <div class="flip flip-vertical">
          <div class="front">
            <h1>{{title}}</h1>
            <img src="{{imageURL}}" />
          </div>
          <div class="back">
            <h2>Genre: {{genre}}</h2>
            <p>{{description}}</p>
            <a href="#" class="details">Details</a>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
</main>