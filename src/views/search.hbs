<section id="search">
  <h1>Search</h1>
  <form action="/movies/search" method="GET" class="form">
    <input type="text" class="search" name="search" placeholder="Title..." />
    <input type="text" name="genre" class="genre" placeholder="Genre..." />
    <input type="number" name="year" class="year" placeholder="Year..." />
    <input type="submit" value="search" />
  </form>
</section>

<section id="catalog">
  <div class="band">

    {{!-- Can further extract to another partial movie-list.hbs --}}
    {{#each movies}}
      {{>movie}}
    {{else}}
      <div class="no-posts">
        <p class="no-offer">There are no posts yet...</p>
      </div>
    {{/each}}


  </div>
</section>